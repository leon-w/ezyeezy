{
  "manifest_version": 2,

  "name": "EZ YEEZY",
  "version": "0.3",

	"content_scripts": [
    {
      "matches": ["https://www.adidas.de/yeezy/*"],
      "js": ["lib/jquery.js", "js/alerter.js"],
      "run_at": "document_end"
    }
  ],

  "options_page": "settings/settings.html",

  "web_accessible_resources": [
    "audio/alert.mp3",
    "config.json"
  ],

  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },

  "permissions": [
    "https://www.adidas.de/yeezy/*",
    "storage"
  ]
}
